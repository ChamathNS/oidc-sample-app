<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" id="SampleApp"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <display-name>OIDCSampleApp</display-name>

    <filter>
        <filter-name>OIDCSampleFilter</filter-name>
        <filter-class>com.sample.OIDCSampleFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>OIDCSampleFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>OIDCSampleFilter</filter-name>
        <url-pattern>*.html</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>OIDCSampleFilter</filter-name>
        <url-pattern>/openid</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>OIDCSampleFilter</filter-name>
        <url-pattern>/token</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>OIDCSampleFilter</filter-name>
        <url-pattern>/logout</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>org.wso2.carbon.identity.sso.agent.SSOAgentContextEventListener</listener-class>
    </listener>
    <context-param>
        <param-name>property-file</param-name>
        <param-value>OIDCSampleApp.properties</param-value>
    </context-param>
    <context-param>
        <param-name>certificate-file</param-name>
        <param-value>wso2carbon.jks</param-value>
    </context-param>
</web-app>
