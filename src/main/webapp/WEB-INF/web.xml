<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" id="SampleApp"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <display-name>OIDCSampleApp</display-name>

    <servlet>
        <servlet-name>OAuth2ClientServlet</servlet-name>
        <servlet-class>com.sample.DispatchClientServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>BackendServiceServlet</servlet-name>
        <servlet-class>com.sample.MetadataServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>OAuth2ClientServlet</servlet-name>
        <url-pattern>/oauth2client</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>BackendServiceServlet</servlet-name>
        <url-pattern>/service</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>OIDCSampleFilter</filter-name>
        <filter-class>com.sample.OIDCSampleFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>OIDCSampleFilter</filter-name>
        <url-pattern>/service</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>com.sample.SampleContextEventListener</listener-class>
    </listener>

    <listener>
        <listener-class>com.sample.JKSLoader</listener-class>
    </listener>

</web-app>
